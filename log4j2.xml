<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>

        <!-- File Appender -->
        <File name="File" fileName="logs/myapp.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </File>

        <!-- HTML Appender (Unique File Name) -->
        <File name="HTMLFile" fileName="logs/myapp-${date:yyyy-MM-dd-HH-mm-ss}.html">
            <HTMLLayout charset="UTF-8">
                <!-- HTMLLayout configuration here -->
                <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</Pattern>
                <Pattern>%n</Pattern> <!-- Include a newline between log entries -->
            </HTMLLayout>
        </File>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="info">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
            <AppenderRef ref="HTMLFile" />
        </Root>
    </Loggers>
</Configuration>
